# ==============================================================================
# WINU BOT SIGNAL - Environment Configuration Template
# ==============================================================================
# IMPORTANT: Copy this file to production.env and fill in your actual values
# NEVER commit production.env or development.env to version control
# ==============================================================================

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=winudb
POSTGRES_USER=winu
POSTGRES_PASSWORD=your_secure_database_password_here

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Market Data APIs
CMC_API_KEY=your_coinmarketcap_api_key_here
COINGECKO_API_BASE=https://api.coingecko.com/api/v3

# Exchange APIs
# Account 1 (Primary)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# Account 2 (Optional) - Add your second Binance account here
# Uncomment and add keys to enable multi-account trading
# BINANCE_API_KEY_2=your_second_binance_api_key_here
# BINANCE_API_SECRET_2=your_second_binance_api_secret_here

# Account 3 (Optional) - Add your third Binance account here
# BINANCE_API_KEY_3=your_third_binance_api_key_here
# BINANCE_API_SECRET_3=your_third_binance_api_secret_here

# Note: You can add as many accounts as needed (4, 5, 6, etc.)
# Just increment the number: BINANCE_API_KEY_4, BINANCE_API_SECRET_4, etc.
# The bot will automatically detect and trade on all configured accounts.

# Gate.io (Optional)
GATE_API_KEY=your_gate_api_key_here
GATE_API_SECRET=your_gate_api_secret_here

# Messaging & Alerts
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
JWT_SECRET=generate_a_secure_random_string_at_least_32_chars
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=10080

# Admin Credentials (set these securely!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_this_to_a_very_secure_password

# Web Configuration
NEXTAUTH_SECRET=generate_secure_random_string_for_nextauth
NEXTAUTH_URL=https://dashboard.winu.app

# Worker Configuration
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_grafana_password_here

# Application Settings
NODE_ENV=production
DEBUG=false
LOG_LEVEL=info

# Timezone
TZ=America/New_York

# Stripe Configuration (use test keys for development)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# SendGrid Email API
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_SENDER=noreply@winu.app

# Risk Management Defaults
DEFAULT_RISK_PERCENT=1.0
MAX_DAILY_LOSS_PERCENT=5.0
MAX_POSITIONS=10

# Signal Generation
SCAN_INTERVAL_SECONDS=30
MIN_SIGNAL_SCORE=0.65
MIN_VOLUME_USD=100000

# Top N coins to monitor by market cap
TOP_COINS_COUNT=15

# Backtest Configuration
BACKTEST_START_DATE=2024-01-01
BACKTEST_INITIAL_BALANCE=10000

# Cloudflare Configuration (if using)
CLOUDFLARE_EMAIL=your_cloudflare_email_here
CLOUDFLARE_API_KEY=your_cloudflare_api_key_here

# Domain Configuration
DOMAIN=winu.app

# Traefik Configuration
TRAEFIK_USERNAME=admin
TRAEFIK_PASSWORD=change_traefik_password_here
ACME_EMAIL=your_acme_email_here

# Enhanced Analysis Configuration
ANALYSIS_MODE=moderate
MIN_CONFIDENCE_SCORE=0.65
MIN_CONFLUENCE_SCORE=0.70
MIN_RISK_REWARD_RATIO=2.0
MAX_POSITION_SIZE=0.02
MAX_VOLATILITY=0.08
PRIMARY_EXCHANGE=binance
SECONDARY_EXCHANGE=gate
MARKET_DATA_SOURCE=coinmarketcap

# Trending Coins Configuration
TRENDING_COINS_COUNT=10
INCLUDE_SYRUP_USDT=true

# Leverage Configuration
BOT_LEVERAGE=20.0
BOT_MAX_LEVERAGE=20.0



